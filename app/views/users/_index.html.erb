<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to user.followings.count, followings_user_path(user) %>フォロー</td>
	      <td><%= link_to user.followers.count, followers_user_path(user) %>フォロワー</td>
        <td>
          <% if user != current_user %>
      	    <% if user.is_followed_by?(current_user) %>
          	    <%= link_to user_relationships_path(user), method: :delete do %>
          	      <button class='btn btn-danger'>フォロー解除</button>
          	    <% end %>
          <% else %>
          	    <%= link_to user_relationships_path(user), method: :post do %>
          	      <button class='btn btn-primary'>フォロー</button>
          	    <% end %>
          	<% end %>    
          <% end %>
    	  </td>
    	  <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
